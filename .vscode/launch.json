    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "Typescript101",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsnd",
            "program": "src/app.ts",
            "args": [
                "--transpile-only",
                "--respawn",
                "--project",
                "tsconfig.json",
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
        }
    ]
}